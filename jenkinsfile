pipeline {
    agent any

    stages {
        stage('permission'){
        steps{
            sh 'chmod 777 f1.sh'
                    sh'chmod 777 f2.sh'
                  sh  'echo "permission granted" '
            }
        }
        stage('execution') {
            steps {
             sh './f1.sh'
                      sh './f2.sh'
                       sh 'echo "executed successfully" '
            }
        }
  stage('display') {
            steps {
                sh 'cat f1.sh'
                sh  'cat f2.sh'
            }
        }
    }
}
